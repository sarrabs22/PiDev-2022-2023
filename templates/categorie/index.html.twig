{% extends 'base_back.html.twig' %}

{% block title %} Categories Annonce{% endblock %}

{% block body %}
    <h1> Liste des Categories</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Afficher/Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
               
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Afficher</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Ajouter</a>
    <a href="{{ path('affichback') }}">Afficher les annonces</a>
     
{% endblock %}

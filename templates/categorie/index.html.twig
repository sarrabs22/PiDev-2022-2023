{% extends 'backbase.html.twig' %}
{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}"><input type="button" class="btn btn-outline-secondary" value="Afficher"</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"><input type="button" class="btn btn-outline-danger" value="Modifier"</a>

                                        {# <a href="{{ path('app_association_show', {'id': association.id}) }}"><input type="button" class="btn btn-outline-success" value="Afficher"</a> #}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}

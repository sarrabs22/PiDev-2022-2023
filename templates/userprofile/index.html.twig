{% extends 'base.html.twig' %}



{% block body %}
<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #044214; height:200px;">
            <div class="ms-5 mt-7 d-flex flex-column">
             <img src="{{ asset('uploads/' ~ app.user.image) | imagine_filter('carre') }}" alt="User Profile Image" class="img-fluid img-thumbnail mt-4 mb-2" style="width: 150px;height:200px; z-index: 1">


                
              
              
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>{{user.nom}}</h5>
              {# <p>New York</p> #}
            </div>
          </div>
         <div class="p-4 text-black" style="background-color: #f8f9fa;">
    <div class="d-flex justify-content-end">
        <a href="{{path('app_editprofile')}}" type="button" class="btn btn-outline-dark me-2" data-mdb-ripple-color="dark">Modifier votre Profile</a>
        <a href="{{path('app_test')}}" type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark">Acceuil</a>
    </div>
    <div class="d-flex justify-content-end text-center py-1">
        <div>
            <p class="mb-1 h5">{{user.nbetoile}}</p>
            <p class="small text-muted mb-0">Nombre d'étoile</p>
        </div>
        <div class="px-3">
            <p class="mb-1 h5">{{user.score}}</p>
            <p class="small text-muted mb-0">Score</p>
        </div>
        {# <div>
            <p class="mb-1 h5">478</p>
            <p class="small text-muted mb-0">Following</p>
        </div> #}
    </div>
</div>

          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About</p>
             <div class="p-4" style="background-color: #f8f9fa;">
            {% if reclamationStatuses|length > 0 %}
                <h4>Vos Reclamations</h4>
                <ul>
                    {% for i in 0..reclamationStatuses|length-1 %}
                        <li>Votre Reclamation de {{ reclamationNames[i] }} est  {{ reclamationStatuses[i] }} publié le {{ reclamationDates[i] }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>You have no reclamations.</p>
            {% endif %}
        </div>

            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0">Vous êtes inscrits dans ces associations</p>
              <p class="mb-0"><a href="#!" class="text-muted">Afficher tous les exploits</a></p>
            </div>
            {# {% for association in associations %}
    <img src="{{ asset(association.image) }}" alt="{{ association.name }}"> #}
         {% for association in associations %}
    <div class="row g-2">
        <div class="col mb-2">
            <img src="http://localhost/public/{{ association.Image }}" alt="{{ association.nom }}"
                class="w-100 rounded-3">
        </div>
        <div class="col mb-2">
            <h4>{{ association.nom }}</h4>
            <p>{{ association.ville }}</p>
        </div>
    </div>
{% endfor %}


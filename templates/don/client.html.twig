{% block body %}
 <link rel="stylesheet" href="{{ asset('css/test.css') }}">

 <div class="container">
  <h1>Dons</h1>
  <div class="row">
    <div class="col-md-8">
      <ul class="cards">
       {% for don in dons %}
        <li class="cards_item">
          <div class="card">
            <div class="img">
              <a href="{{ path('app_don_showclient', {'id': don.id}) }}">
                <img src="http://localhost/public/{{ don.Image }}" width="500" height="300">
              </a>
            </div> 
            <div class="card_content">
              <h2 class="card_title">{{ don.NameD }}</h2>
              <p class="card_text">Quantit√©:
								{{ don.quantite }}</p>
             <a href="{{ path('app_don_claim', {'id': don.id}) }}">
								<button type="button" class="btn card_btn">Claim</button>
							</a>
              
            </div> 
          </div>
        </li>
        {% endfor %}
      </ul>
     
    </div>

  </div>
</div>



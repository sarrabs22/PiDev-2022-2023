{% extends 'base.html.twig' %}

{% block body%}
	{% block form %}
		{{ form_start( searchDon,{'attr': {'class':'form-horizontal','novalidate':'novalidate'}}
		) }}
		{% form_theme searchDon 'bootstrap_5_horizontal_layout.html.twig' %}

		<div class="col-lg-7">
			{{ form_row(searchDon.NameD) }}
		</div>
		{{ form_end(searchDon) }}

	{% endblock %}

	<table class="table" border="15">
		<thead>
			<tr>
				<th>NameD</th>
				<th>Quantite</th>
				<th>Description</th>
				<th>Localisation</th>
				<th>Image</th>
				<th>Email</th>
				<th>Numero</th>
			</tr>
		</thead>
		<tbody>
			{% for don in dons %}
				<tr>
					<td>{{ don.NameD }}</td>
					<td>{{ don.quantite }}</td>
					<td>{{ don.Description }}</td>
					<td>{{ don.Localisation }}</td>
					<td><img src="/uploads/{{ don.Image }}" alt="image Don" width="100" height="100"></td>
					<td>{{ don.email }}</td>
					<td>{{ don.Numero }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a href="/don/">
		<button type="button" class="btn btn-outline-success">Back to Don</button>
	</a>
{% endblock %}

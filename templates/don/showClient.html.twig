{% extends 'base.html.twig' %}

{% block title %}Don
{% endblock %}

{% block body %}
	<h1>Don</h1>
	<table class="table">
		<tbody>

			<tr>
				<th>NameD</th>
				<td>{{ don.NameD }}</td>
			</tr>
			<tr>
				<th>Quantite</th>
				<td>{{ don.quantite }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ don.Description }}</td>
			</tr>
			<tr>
				<th>Address</th>
				<td>{{ don.Localisation }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="/uploads/{{ don.Image }}" alt="image Don" width="100" height="100"></td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ don.email }}</td>
			</tr>
			<tr>
				<th>Numero</th>
				<td>{{ don.Numero }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('show_map2', {'id': don.id}) }}">Show Map</a>
{% endblock %}
